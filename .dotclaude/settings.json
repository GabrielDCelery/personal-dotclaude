{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "cleanupPeriodDays": 30,
  "env": {
    "DISABLE_TELEMETRY": "1",
    "DISABLE_ERROR_REPORTING": "1",
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "1"
  },
  "permissions": {
    "allow": [
      "WebFetch",
      "WebSearch",
      "Skill",
      "mcp__context7__resolve-library-id",
      "mcp__context7__query-docs"
    ],
    "deny": [
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(**/secrets/**)",
      "Read(**/config/credentials.json)",
      "Read(**/*.key)",
      "Read(**/*.pem)",
      "Read(**/*.p12)",
      "Read(**/*credential*)",
      "Bash(rm -rf*)",
      "Bash(git push *)",
      "Bash(**/.ssh*)",
      "Bash(*ssh*)",
      "Glob(**/.ssh/**)",
      "Read(**/.ssh/**)",
      "Edit(**/.ssh/**)",
      "Write(**/.ssh/**)"
    ]
  },
  "model": "opusplan",
  "statusLine": {
    "type": "command",
    "command": "bunx -y ccstatusline@latest",
    "padding": 0
  },
  "companyAnnouncements": ["Wakey wakey, eggs and bakey"]
}
